<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name="com.tfm.myapplication.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SandbankApp"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity
            android:name="com.tfm.myapplication.TransferErrorActivity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.UpdateProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.CreatingAccountErrorActvity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.TransferWindowActivity"
            android:exported="false" />

        <activity
            android:name="com.tfm.myapplication.LoginScreenActivity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.CreateAccountActivity"
            android:exported="false" />
        <activity
            android:name="com.tfm.myapplication.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tfm.myapplication.MainActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>