<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Inicia Sesión"
            android:textColor="@color/black"
            android:textSize="38dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60sp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="Identificador"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_identifier"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginEnd="20dp"

                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:hint="Ej: 01234567F"
                android:paddingStart="25dp"
                android:paddingTop="8dp"
                android:paddingEnd="25dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/app_color" />
   <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
       android:layout_marginTop="20dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Identificador"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginEnd="20dp"
android:inputType="textPassword"
                android:layout_weight="1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/edit_bg"
                android:fontFamily="@font/nunito_semibold"
                android:gravity="center"
                android:hint="Ej: contraseña123"
                android:paddingStart="25dp"
                android:paddingTop="8dp"
                android:paddingEnd="25dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/app_color" />

        </LinearLayout>


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView1"
        android:layout_marginBottom="30dp"
        android:onClick="main_page"
        android:background="@drawable/outline_btn_bg"
        android:text="Listo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center"
        android:text="Ha olvidado la contraseña?"
        android:textColor="@color/black"
        android:textSize="20dp" />
</RelativeLayout>